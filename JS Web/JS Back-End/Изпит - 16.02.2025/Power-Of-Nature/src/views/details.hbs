<section id="details-info">
    <h1>Details</h1>
    <div class="image">
        <img src="{{item.image}}">
    </div>

    <div class="info">
        <div class="text">
            <h1 id="name">{{item.name}}</h1>
            <h3 id="location">Location: {{item.location}}</h3>
            <p id="type">Type: {{item.type}}</p>
            <p id="year"><span>Year of the Event: {{item.year}}</span></p>
            <p id="interested">Interested: {{item.interestedList.length}}</p>
            <p id="description">{{item.description}}</p>
        </div>
        {{#if isAuthenticated}}
        <div class="product-btn">
            {{#if isOwner}}
            <div class="author">
                <a href="/disasters/{{item._id}}/edit" class="btn-edit">Edit</a>
                <a href="/disasters/{{item._id}}/delete" class="btn-delete">Delete</a>
            </div>
            {{else if isVoted}}
            <p class="interested-message">You've already been interested in this event!</p>
            {{else}}
            <a href="/disasters/{{item._id}}/interested" class="btn-interested">Interested</a>
            {{/if}}
        </div>
        {{/if}}
    </div>
</section>