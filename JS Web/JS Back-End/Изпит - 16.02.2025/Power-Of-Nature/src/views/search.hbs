<section class="event-search">
    <h1 id="title">Search</h1>

    <form class="search-form" action="/search/disasters" method="GET">
        <input type="text" class="search-event" name="name" placeholder="Search by Name..." value="{{filter.name}}">
        <select id="type" name="type">
            <option value="Wildfire" {{#if (eq filter.type "Wildfire" )}}selected{{/if}}>Wildfire</option>
            <option value="Flood" {{#if (eq filter.type "Flood" )}}selected{{/if}}>Flood</option>
            <option value="Earthquake" {{#if (eq filter.type "Earthquake" )}}selected{{/if}}>Earthquake</option>
            <option value="Hurricane" {{#if (eq filter.type "Hurricane" )}}selected{{/if}}>Hurricane</option>
            <option value="Drought" {{#if (eq filter.type "Drought" )}}selected{{/if}}>Drought</option>
            <option value="Tsunami" {{#if (eq filter.type "Tsunami" )}}selected{{/if}}>Tsunami</option>
            <option value="Other" {{#if (eq filter.type "Other" )}}selected{{/if}}>Other</option>
        </select>
        <button type="submit" class="btn-search">Search</button>
    </form>

    {{#if items}}
    <div class="search-result">
        <div class="search-list">
            {{#each items}}
            <div class="event">
                <div class="img">
                    <img src="{{image}}">
                </div>
                <div class="event-info">
                    <h1>{{name}}</h1>
                    <p><span>Location: </span>{{location}}</p>
                    <p><span>Type: </span>{{type}}</p>
                </div>

                <a href="/disasters/{{_id}}/details" class="btn-details">Details</a>
            </div>
            {{/each}}
        </div>
    </div>
    {{else}}
    <div class="no-match">
        <p>No match was found!</p>
    </div>
    {{/if}}
</section>