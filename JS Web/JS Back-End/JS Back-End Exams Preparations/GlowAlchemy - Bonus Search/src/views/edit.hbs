<section class="form-container">
    <h2>Edit Recipe</h2>
    <form method="POST">
        <label for="name">Product Name:</label>
        <input type="text" id="name" name="name" value="{{item.name}}">

        <label for="skin">Skin Type:</label>
        <textarea id="skin" name="skin">{{item.skin}}</textarea>

        <label for="description">Product Description:</label>
        <textarea id="description" name="description">{{item.description}}</textarea>

        <label for="ingredients">Key Ingredients:</label>
        <textarea id="ingredients" name="ingredients">{{item.ingredients}}</textarea>

        <label for="benefits">Benefits:</label>
        <textarea id="benefits" name="benefits">{{item.benefits}}</textarea>

        <label for="price">Price:</label>
        <input type="number" id="price" name="price" value="{{item.price}}">

        <label for="image">Image URL:</label>
        <input type="url" id="image" name="image" value="{{item.image}}">

        <button type="submit">Create Product Card</button>
    </form>
</section>