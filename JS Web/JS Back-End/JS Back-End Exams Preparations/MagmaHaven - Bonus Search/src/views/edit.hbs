<section id="edit-container">
    <div class="edit-container-info">
        <h1>Edit Announcement</h1>
        <form method="POST">
            <label>Name:</label>
            <input type="text" id="name" name="name" value="{{volcano.name}}">
            <label>Location:</label>
            <input type="text" id="location" name="location" value="{{volcano.location}}">
            <label>Elevation:</label>
            <input type="number" id="elevations" name="elevation" value="{{volcano.elevation}}">
            <label>Year of Last Eruption:</label>
            <input type="number" id="last-year-eruption" name="lastEruption" value="{{volcano.lastEruption}}">
            <label>Image:</label>
            <input type="text" id="image" name="image" value="{{volcano.image}}">
            <label>Volcano Type:</label>
            <select id="type" name="typeVolcano">
                <option value="Supervolcanoes" {{#if (eq volcano.typeVolcano "Supervolcanoes")}}selected{{/if}}>Supervolcanoes</option>
                <option value="Submarine" {{#if (eq volcano.typeVolcano "Submarine")}}selected{{/if}}>Submarine</option>
                <option value="Subglacial" {{#if (eq volcano.typeVolcano "Subglacial")}}selected{{/if}}>Subglacial</option>
                <option value="Mud" {{#if (eq volcano.typeVolcano "Mud")}}selected{{/if}}>Mud</option>
                <option value="Stratovolcanoes" {{#if (eq volcano.typeVolcano "Stratovolcanoes")}}selected{{/if}}>Stratovolcanoes</option>
                <option value="Shield" {{#if (eq volcano.typeVolcano "Shield")}}selected{{/if}}>Shield</option>
            </select>
            <label>Description:</label>
            <textarea id="description" name="description" placeholder="...">{{volcano.description}}</textarea>
            <input type="submit" id="btn" value="Submit"></input>
        </form>
    </div>
</section>